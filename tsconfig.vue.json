{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Modules */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["vite/client"],

    /* Emit */
    "noEmit": true,

    /* Language and Environment */
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "target": "ES2022"
  }
}
